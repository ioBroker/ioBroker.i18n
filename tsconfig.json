{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ESNext",
        "noEmit": true,
        "noEmitOnError": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "outDir": "build/esm",
        "removeComments": false,
        "strict": true,
        "sourceMap": false,
        "inlineSourceMap": false,
        "types": ["@types/node", "@iobroker/types"]
    },
    "include": ["**/*.ts"],
    "exclude": ["build/**", "node_modules/**"]
}
